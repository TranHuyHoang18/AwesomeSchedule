<% provide :title, ("AWSchedule") %>
<div class="container" style="margin-top: -50px">
  <div class="uk-text-center" uk-grid>
    <div class="uk-width-1-1@s uk-width-1-3@m">
      <button type="button" class="btn btn-warning btn-lg btn-block ">日付 </button>
      <div class="row homepage_search" style="border: 2px solid black;margin-left: 0px;padding-bottom: 30px">
        <div class="row" style="padding-top:50px;padding-bottom: 30px">
          <h1 style="margin:0px auto;font-weight: bold"><%= @day.strftime("%Y")%>年 <%= @day.strftime("%m")%>月 <%= @day.strftime("%d")%>日</h1>
        </div>
        <%= search_form_for @q, class: "form-inline" do |f| %>
          <div class="row" uk-grid>
            <div class="uk-width-1-3@m" style="font-size: large;font-weight: bold;">
              名前
            </div>
            <div class="uk-width-2-3@m" >
              <%= f.search_field :tasks_i_cont, class: "form-control", placeholder: "タスクの名前", style: "width: 90%"%><br>
            </div>
          </div>

          <div class="row" uk-grid>
            <div class="uk-width-1-3@m" style="font-size: large;font-weight: bold;">
              日付
            </div>
            <div class="uk-width-2-3@m">
              <input type="date" class="form-control" name="start_time" value= <%= @day %> style= "width:90%">
            </div>
          </div>
          <div class="row" style="padding-top: 20px">
            <%= f.button :submit, class: "btn btn-primary", style: "margin:0px auto;font-size:large" do %>
                  <i class="fa fa-search" aria-hidden="true" style="font-size: 25px;padding-right: 10px"></i>探す
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="uk-text-left" style="padding-top: 3%">
        <p style="font-size: xx-large;font-weight: bold;padding-top: 3%">タスクの種類</p>
      </div>
      <div class="uk-text-left">

        <a href= <%="tasks?q%5Btasks_i_cont%5D=&start_time=#{@day.to_s}&q%5Btype_task_eq%5D=1&button=" %> style="padding-left: 8%;font-size: large;color:red;font-weight:bold"><i class="fa fa-home" aria-hidden="true" style="font-size: 30px"></i> 家族</a>
        <a href=<%="tasks?q%5Btasks_i_cont%5D=&start_time=#{@day.to_s}&q%5Btype_task_eq%5D=2&button=" %> style="padding-left: 8%;font-size: large;color:red;font-weight:bold"> <i class="fa fa-user" aria-hidden="true" style="font-size: 30px"> </i> 個人</a>
        <a href=<%="tasks?q%5Btasks_i_cont%5D=&start_time=#{@day.to_s}&q%5Btype_task_eq%5D=3&button=" %> style="padding-left: 8%;font-size: large;color:red;font-weight:bold"><i class="fa fa-briefcase" aria-hidden="true" style="font-size: 30px"></i> 会社</a>
      </div>
      <div class="uk-text-left uk-text-bold">
        <p style="font-size: xx-large;padding-top: 3%">レベル</p>
      </div>
      <div class="uk-text-left">
        <a href=<%="tasks?q%5Btasks_i_cont%5D=&start_time=#{@day.to_s}&q%5Blevel_eq%5D=3&button=" %> style="padding-left: 8%;font-size: large;color:yellow;font-weight:bold">とても大切</a>
      </div>
      <div class="uk-text-left">
        <a href=<%="tasks?q%5Btasks_i_cont%5D=&start_time=#{@day.to_s}&q%5Blevel_eq%5D=2&button=" %>  style="padding-left: 8%;font-size: large;color:yellow;font-weight:bold">大切</a>
      </div>
      <div class="uk-text-left">
        <a href=<%="tasks?q%5Btasks_i_cont%5D=&start_time=#{@day.to_s}&q%5Blevel_eq%5D=1&button=" %>  style="padding-left: 8%;font-size: large;color:yellow;font-weight:bold">あまり大切じゃない</a>
      </div>
    </div>
    <div class="uk-width-1-1@s uk-width-2-3@m">
      <%= link_to new_task_path,"style"=> "text-decoration:none" do %>
        <button type="button" class="btn btn-success btn-block" style="font-size: medium; padding: 10px 10px 10px 10px">新しいタスクを作成
        </button>
      <% end %>
      <div class="uk-text-left" style="padding-top: 3%">
        <table class="uk-table">
          <thead>
            <tr>
              <td class="uk-text-bold uk-text-center uk-text-middle uk-text-large">#</td>
              <td class="uk-text-bold uk-text-center uk-text-middle uk-text-large">名前</td>
              <td></td>
              <td class="uk-text-bold uk-text-center uk-text-large"></i>スタトタイム</td>
              <td class="uk-text-bold uk-text-center uk-text-large"></i>デッドライン</td>
              <td></td>
              <td></td>
            </tr>
          </thead>
          <tbody>
            <% @tasks.each do |task| %>
              <% if task.status == "2" %>
                <tr style="background: #ffffcc">
                  <td class="uk-text-bold uk-text-center uk-text-middle">
                    <input type="checkbox" checked>
                  </td>
              <% else %>
                <tr style="background: #ffcccc">
                  <td class="uk-text-bold uk-text-center uk-text-middle">
                    <%= link_to task_path(task, status: "2"), method: :patch, data: { confirm: "完成？" } do %>
                      <input type="checkbox">
                    <% end %>
                  </td>
              <% end %>
                <td class="uk-text-middle"><label class="task"><%= link_to task.tasks, task %></label></td>
                <td class="uk-text-bold uk-text-center uk-text-middle">
                  <% if task.type_task == "1" %>
                    <i class="fa fa-home" aria-hidden="true" style="font-size: 30px"></i>
                  <% elsif task.type_task == "2" %>
                    <i class="fa fa-user" aria-hidden="true" style="font-size: 30px"> </i>
                  <% else %>
                    <i class="fa fa-briefcase" aria-hidden="true" style="font-size: 30px"></i>
                  <% end %>
                </td>
                <td class="uk-text-bold uk-text-center uk-text-middle"><%= task.start_time.to_date() %> <%= task.start_time.strftime("%H:%M") %> </td>
                <td class="uk-text-bold uk-text-center uk-text-middle"><%= task.deadline.to_date() %> <%= task.deadline.strftime("%H:%M") %> </td>
                <td class="uk-text-middle">
                  <%= link_to edit_task_path task do %>
                    <button type="button" class="btn btn-warning"><i class="fa fa-wrench" aria-hidden="true" style="font-size: 20px"></i></button>
                  <% end %>
                </td>
                <td class="uk-text-middle">
                  <%= link_to task, method: :delete, data: { confirm: "確信してるの?" } do %>
                    <button type="button" class="btn btn-danger btn-sm" data-toggle="tooltip" data-placement="right" title = <%= "delete" %>><i class="fa fa-trash-o" aria-hidden="true" style="font-size: 25px"></i></button>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
          <%= paginate @tasks, theme: "twitter-bootstrap-4" %>
      </div>
    </div>
  </div>
</div>
